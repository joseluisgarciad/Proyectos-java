
public class Contarvocales {
	public static int vocales (String palabra) {
		char caracter;
		int contador = 0;
		String vocales="aeiou";
		for(int i=0;i<palabra.length();i++){
            for(int j=0;j<vocales.length();j++){
               if(palabra.charAt(i)==vocales.charAt(j)){
                    contador++;
                }

            }            
            
	    }
		return contador;
    }
}
