package fechas;

public class lanzaFecha extends Fecha {

	public static final int MAX_FECHAS = 100;
	
	public static int random(int min, int max) {
		return (int)(Math.random() * (max - min + 1)) + min;
	}
	
	public static void main(String[] args) {
		for (int i = 0; i < MAX_FECHAS; i++)
		{
			try
			{
				Fecha f = new Fecha(random(1, 2007), random(1, Fecha.meses_Anho), random(1, 31));
				System.out.println("Fecha correcta: " + f.toString());
			}
			catch(Exception e) {
				System.out.println("EXCEPTION: " + e.getMessage());
			}
		}
	}

	
	// verificar si un año es bisiesto
    Fecha f1 = new Fecha();
    if ((f1. % 4 == 0) && ((anio % 100 != 0) || (anio % 400 == 0))) {
    	System.out.println("El año es bisiesto");
    } else {
    	System.out.println("El año no es bisiesto");
    }
} 	
}
